<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_300"
    android:paddingTop="@dimen/len_28"
    tools:context=".activity.UserActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_48"
        android:src="@drawable/back"

        android:tint="@color/white"
        android:padding="@dimen/len_12"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />

    <com.jiuli.local_share.view.PortraitView
        android:id="@+id/portrait"
        android:layout_width="@dimen/len_96"
        android:layout_height="@dimen/len_96"
        android:padding="1dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/holder_add"
        android:background="@drawable/portrait_background"
        android:layout_marginTop="@dimen/len_56"/>

    <ImageView
        android:id="@+id/iv_submit"
        android:layout_width="@dimen/len_48"
        android:layout_height="@dimen/len_48"
        android:layout_gravity="end"
        android:src="@drawable/ok"
        android:tint="@color/white"
        android:padding="@dimen/len_12"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />

    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_12"
        android:layout_marginRight="@dimen/len_12"
        android:layout_marginTop="180dp"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="在此输入的昵称"
        android:textColor="@color/white"
        android:textColorHint="@color/white_alpha_128"
        app:gHintTitle="none"
        app:gLineColor="@color/white_alpha_160"
        app:gLineSize="1dp" />


    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/len_172"
        android:layout_height="@dimen/len_44"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/len_48"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:padding="0dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:gTouchColor="@color/white_alpha_48"
        app:gTouchDurationRate=".5"
        app:gTouchCornerRadius="@dimen/len_8"
        app:gTouchEffect="ripple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_156"
        android:gravity="center"
        android:text="选择专属头像"
        android:textColor="@color/white" />

</FrameLayout>