<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/len_2"
    android:background="@drawable/cell_group_bg"
    android:foreground="@drawable/cell_group_fg"
    android:gravity="center"
    android:orientation="vertical"
    android:outlineProvider="background"
    tools:targetApi="LOLLIPOP">

    <TextView
        android:id="@+id/tv_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_2"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/blue_500"
        android:textSize="@dimen/font_14"
        tools:text="groupID:01" />

    <TextView
        android:id="@+id/tv_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_6"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/blue_400"
        tools:text="共30人在线" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/blue_50" />

    <TextView
        android:id="@+id/tv_user_names"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:layout_margin="@dimen/len_4"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="@dimen/font_8"
        android:lines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/blue_300"
        tools:text="Mary HarxfzdfgfgfgfggSDds gSDgDgDgSdgg sdgsdgasdgagasdgasdgasdgasdgsdgmon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/blue_50" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_28"
        android:gravity="center"
        android:textColor="@color/blue_500"
        tools:text="@string/in_the_group" />

</LinearLayout>