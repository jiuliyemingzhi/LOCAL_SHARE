<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_16">

    <LinearLayout
        android:layout_width="222dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/pop_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_8"
            android:gravity="center"
            android:text="NAME"
            android:textColor="@color/blue_500" />

        <com.jiuli.local_share.view.PortraitView
            android:id="@+id/portrait"
            android:layout_width="@dimen/len_96"
            android:layout_height="@dimen/len_96"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/font_8"
            android:background="@drawable/portrait_background"
            android:padding="1dp"
            android:src="@drawable/portrait" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/len_12"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_address"
                android:gravity="center"
                android:textColor="@color/blue_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/len_8" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/len_4"
            android:layout_marginRight="@dimen/len_4"
            android:background="@color/blue_100" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/blue_400"
            app:gTouchColor="@color/blue_50"
            app:gTouchCornerRadius="0dp"
            app:gTouchDurationRate="0.3"
            app:gTouchEffect="ripple" />
    </LinearLayout>
</FrameLayout>