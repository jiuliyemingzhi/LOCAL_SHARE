<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_4">

    <com.jiuli.local_share.view.PortraitView
        android:id="@+id/portrait"
        android:layout_width="@dimen/len_44"
        android:layout_height="@dimen/len_44"
        android:layout_marginLeft="@dimen/len_4" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_56"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/blue_500"
        android:textSize="@dimen/font_14"
        tools:text="@string/bmb_groups_info" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_56"
        android:layout_marginTop="@dimen/len_24"
        android:ellipsize="end"
        android:focusable="true"
        android:maxLines="1"
        android:textColor="@color/blue_300"
        android:textSize="@dimen/font_12"
        tools:text="@string/bmb_groups_info" />
</FrameLayout>